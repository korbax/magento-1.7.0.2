<?xml version="1.0"?>


<layout version="0.1.0">
    <default>
        <action method="removeLinkByUrl"><url>checkout/cart</url></action>
        <reference name="top.links">
            <!--<action method="removeLinkByName"><name>cart</name></action>-->
            <remove name="checkout_cart_link"/>
            <action method="addLink" translate="label title">
                <label helper="separatecart/data/getCountFHT"></label>
                <url>checkout/fht</url>
                <title>My FHT</title>
                <prepare>true</prepare>
                <urlParams helper="core/url/getHomeUrl"/>
                <position>4</position>
                <liParams/>
                <aParams>class="top-link-cart"</aParams>
                <beforeText></beforeText>
                <afterText></afterText>
            </action>
            <action method="addLink" translate="label title">
                <label helper="separatecart/data/getCountSimple"></label>
                <url>checkout/cart</url>
                <title>My Cart</title>
                <prepare>true</prepare>
                <urlParams helper="core/url/getHomeUrl"/>
                <position>5</position>
                <liParams/>
                <aParams>class="top-link-cart"</aParams>
                <beforeText></beforeText>
                <afterText></afterText>
            </action>
        </reference>
    </default>

    <!--product page-->
    <catalog_product_view>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>js/separatecart.js</name><params/></action>
        </reference>

        <reference name="content">
            <reference name="product.info">
                <block type="catalog/product_view" name="product.info.addtocart" as="addtocart" template="psd2html/separatecart/view/addtocart.phtml"/>
            </reference>
        </reference>
    </catalog_product_view>

    <!--cart page-->
    <checkout_cart_index>
        <reference name="checkout.cart">
            <action method="addItemRender">
                <type>simple</type><block>checkout/cart_item_renderer</block><template>psd2html/separatecart/item/default.phtml</template>
            </action>
        </reference>

        <reference name="checkout.cart.top_methods">
            <action method="unsetChild"><name>checkout.cart.methods.onepage</name></action>
            <block type="checkout/onepage_link" name="checkout.cart.methods.onepage" template="psd2html/separatecart/checkout/onepage/link.phtml"/>
        </reference>
    </checkout_cart_index>

    <!--FHT cart page-->
    <checkout_fht_index>
        <update handle="checkout_cart_index" />
    </checkout_fht_index>

    <!--FHT checkout page-->
    <checkout_onepagefht_index>
        <update handle="checkout_onepage_index" />
    </checkout_onepagefht_index>

    <checkout_onepage_review>
        <reference name="root">
            <action method="setTemplate"><template>psd2html/separatecart/checkout/onepage/review/info.phtml</template></action>
        </reference>
    </checkout_onepage_review>
</layout>